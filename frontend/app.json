{
  "expo": {
    "name": "shadowsound",
    "slug": "shadowsound",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/landing_page_bottom_logo.png",
    "scheme": "shadowsound",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "ShadowSound listens for safety sounds around you."
      }
    },
    "android": {
      "permissions": [
        "RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/no_image.png",
        "backgroundImage": "./assets/images/no_image.png",
        "monochromeImage": "./assets/images/no_image.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/no_image.png"
    },
    "plugins": [
      "expo-router",
      "expo-av",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/no_image.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}